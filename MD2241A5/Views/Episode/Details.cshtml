@model MD2241A5.Models.EpisodeWithDetailViewModel

@{
    ViewBag.Title = Model.Name + " - Details";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        Episode Details
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Show Name</dt>
            <dd>@Html.DisplayFor(model => model.Show.Name)</dd>

            <dt>Episode Name</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>Season Number</dt>
            <dd>@Html.DisplayFor(model => model.SeasonNumber)</dd>

            <dt>Episode Number</dt>
            <dd>@Html.DisplayFor(model => model.EpisodeNumber)</dd>

            <dt>Genre</dt>
            <dd>@Html.DisplayFor(model => model.Genre)</dd>

            <dt>Air Date</dt>
            <dd>@Html.DisplayFor(model => model.AirDate)</dd>

            <dt>Image</dt>
            <dd>
                <img src="@Model.ImageUrl" alt="Episode Image" class="img-responsive" />
            </dd>

            <dt>Clerk</dt>
            <dd>@Html.DisplayFor(model => model.Clerk)</dd>
        </dl>
    </div>
</div>

@if (User.IsInRole("Clerk"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
    </p>
}

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>