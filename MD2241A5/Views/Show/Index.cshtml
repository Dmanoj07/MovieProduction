@model IEnumerable<MD2241A5.Models.ShowBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<style>
    .actor-image {
        max-width: 100px;
        max-height: 100px;
    }
</style>

<p>
    @Html.ActionLink("Create New", "Create", "Show", new { actorId = 1 }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coordinator)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            <img src="@Url.Content(item.ImageUrl)" class="actor-image" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Coordinator)
        </td>
        <td>
            @if (User.IsInRole("Clerk"))
            {
            <td>@Html.ActionLink("Add Episode", "AddEpisode", "Show", new { id = item.Id }, null)</td>
             }
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
